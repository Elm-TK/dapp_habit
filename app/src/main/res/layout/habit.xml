<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

        <ImageView
                android:id="@+id/color_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@drawable/circle_green_24"
                android:contentDescription="color"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Название привычки"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/color_image_view"
                app:layout_constraintTop_toTopOf="@+id/color_image_view"/>

        <TextView
                android:id="@+id/priority_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Высокий"
                app:layout_constraintTop_toBottomOf="@+id/title_text_view"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/title_text_view"/>

        <TextView
                android:id="@+id/type_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Хорошая"
                app:layout_constraintStart_toEndOf="@+id/priority_text_view"
                app:layout_constraintTop_toTopOf="@+id/priority_text_view"
                android:layout_marginStart="20dp"/>

        <TextView
                android:id="@+id/period_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5 раз в 6 дней"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/type_text_view"
                app:layout_constraintTop_toTopOf="@+id/type_text_view"/>

        <TextView
                android:id="@+id/description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Описание привычки Описание привычки Описание привычки Описание привычки Описание привычки"
                app:layout_constraintTop_toBottomOf="@+id/period_text_view"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/color_image_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
