<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_create_or_edit_habit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white">

    <TextView
            android:id="@+id/action_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Создание привычки"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/title_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:backgroundTint="@color/gray_low"
            android:background="@drawable/edit_text_rounded"
            android:hint="Название"
            app:layout_constraintTop_toBottomOf="@+id/action_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

    <EditText
            android:id="@+id/description_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:lines="5"
            android:hint="Описание"
            android:gravity="start|bottom"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:backgroundTint="@color/gray_low"
            android:background="@drawable/edit_text_rounded"
            app:layout_constraintTop_toBottomOf="@+id/title_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@id/option1"
            app:layout_constraintTop_toBottomOf="@+id/description_input"
            app:layout_constraintStart_toStartOf="parent">

        <RadioButton
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хорошая"/>

        <RadioButton
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Плохая"/>

    </RadioGroup>

    <Spinner
            android:id="@+id/priority_selector"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:entries="@array/priorities"
            app:layout_constraintTop_toBottomOf="@+id/description_input"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Повторять"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/repeat_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:text="1"
            android:textAlignment="center"
            android:inputType="number"
            android:padding="5dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/gray_low"
            android:background="@drawable/edit_text_rounded"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="раз(а) в"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/repeat_input"
            android:layout_marginStart="5dp"/>

    <EditText
            android:id="@+id/days_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:text="1"
            android:textAlignment="center"
            android:inputType="number"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/gray_low"
            android:background="@drawable/edit_text_rounded"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дней"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/days_input"
            android:layout_marginStart="5dp"/>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:text="Добавить"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
